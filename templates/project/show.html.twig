{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<h1>Project</h1>

<table class="record_properties table table-condensed">
  <tbody>
  <tr>
    <th>Id</th>
    <td>{{ project.id }}</td>
  </tr>
  <tr>
    <th>Name</th>
    <td>{{ project.name }}</td>
  </tr>
  <tr>
    <th>Long_name</th>
    <td>{{ project.longname }}</td>
  </tr>
  <tr>
    <th>Start_date</th>
    <td>{{ project.startdate|date('Y-m-d H:i:s') }}</td>
  </tr>
  <tr>
    <th>End_date</th>
    <td>{{ project.enddate|date('Y-m-d H:i:s') }}</td>
  </tr>
  </tbody>
</table>

<ul class="record_actions">
  <li>
    <a href="{{ path('project_list') }}">
      Back to the list
    </a>
  </li>
  <li>
    <a href="{{ path('project_update', { 'id': project.id }) }}">
      Edit
    </a>
  </li>
  <li>
      {{ include('project/delete_form.html.twig') }}
  </li>
</ul>
{% endblock %}